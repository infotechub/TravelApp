<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TravelRecordApp"
             x:Class="TravelRecordApp.MainPage">
    

    <StackLayout VerticalOptions="Center" Margin="20,0,20,0">
        <!-- Place new controls here -->
        <Entry x:Name="emailEntry" PlaceholderColor="#9acd32" Placeholder="Email Address" TextColor="{StaticResource dodgerblue}" Keyboard="Email"/>
        <Entry x:Name="passwordEntry" PlaceholderColor="#9acd32"     Placeholder ="Password" TextColor="{StaticResource dodgerblue}" IsPassword="True"/>
        <Button x:Name="LoginButton" Margin="0,50,0,0" Text="Log In" Clicked="LoginButton_Clicked" Style="{StaticResource normalButton}"/>
    </StackLayout>

</ContentPage>
